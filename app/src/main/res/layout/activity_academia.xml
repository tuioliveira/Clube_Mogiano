<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_academia"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/blue_toolbar"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="26dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="80dp">

            <TableRow
                android:layout_height="60dp"
                android:background="@color/blue_table_top">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text="Segunda-Feira"
                    android:textColor="@color/orange_edge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text="Terça-Feira"
                    android:textColor="@color/orange_edge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text="Quarta-feira"
                    android:textColor="@color/orange_edge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text="Quinta-feira"
                    android:textColor="@color/orange_edge" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text="Secta-feira"
                    android:textColor="@color/orange_edge" />

            </TableRow>

            <TableRow android:background="@color/gray_table">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:hyphenationFrequency="normal"
                    android:padding="10dp"
                    android:text="Período da manhã"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:hyphenationFrequency="normal"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="10sp" />


            </TableRow>

            <TableRow android:background="@color/gray_table">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:hyphenationFrequency="normal"
                    android:padding="10dp"
                    android:text="Período da Tarde"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="10sp" />

            </TableRow>

            <TableRow android:background="@color/gray_table">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:hyphenationFrequency="normal"
                    android:padding="10dp"
                    android:text="Período da Noite"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:hyphenationFrequency="normal"
                    android:padding="10dp"
                    android:text=""
                    android:textSize="10sp" />
            </TableRow>


        </TableLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="PROFESSORES"
            android:textAlignment="center"
            android:textColor="@color/orange_edge"
            android:textSize="20sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/professor1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="70dp"
                android:src="@drawable/avatar_professores" />

            <ImageView
                android:id="@+id/professor2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="60dp"
                android:src="@drawable/avatar_professores" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nome1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Nome"
                android:layout_marginStart="100dp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nome2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Nome"
                android:textColor="@color/black"
                android:layout_marginStart="124dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>