                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/fundo_da_tabela"
                    android:padding="10dp"
                    android:text="DIA \nDA SEMANA"
                    android:textColor="@color/orange_edge" />

