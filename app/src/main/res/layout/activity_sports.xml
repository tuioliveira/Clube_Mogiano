<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_sports"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/blue_toolbar"
            android:elevation="2dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="A área de Esportes do Clube Mogiano promove saúde e bem estar!"
            android:textAlignment="center"
            android:textColor="@color/blue_clube"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:text="O Clube Mogiano emprega mais de 130 funcionários, incluindo professores e monitores qualificados, para oferecer uma ampla variedade de atividades esportivas."
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Academia"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_academia" />

            <ImageView
                android:id="@+id/Atletismo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_atletismo" />

            <ImageView
                android:id="@+id/Ballet"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_ballet" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Basquete"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_basquete" />

            <ImageView
                android:id="@+id/Beach_tennis"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_beach_tennis" />

            <ImageView
                android:id="@+id/Fitness"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_fitness" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Futebol"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_futebol" />

            <ImageView
                android:id="@+id/Ginastica"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_ginastica" />

            <ImageView
                android:id="@+id/Handebol"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_handebol" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Hidroginastica"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_hidroginastica" />

            <ImageView
                android:id="@+id/Jazz"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_jazz" />

            <ImageView
                android:id="@+id/JiuJitsu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_jiu_jitsu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/LianGong"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_lian_gong" />

            <ImageView
                android:id="@+id/Natação"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_natacao" />

            <ImageView
                android:id="@+id/Skate"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_skate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/TennisCampo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_tennis_de_campo" />

            <ImageView
                android:id="@+id/TennisMesa"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_tennis_de_mesa" />

            <ImageView
                android:id="@+id/Volei"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_volei" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Yoga"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icone_yoga" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
